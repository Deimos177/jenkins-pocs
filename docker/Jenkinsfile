pipeline {
    agent any
    stages {
        stage('Clone repo') {
            steps {
                checkout scm: [$class: 'GitSCM',
                branches: [[name: "*/${params.repoBranch}"]],
                userRemoteConfigs: [[credentialsId: 'jenkins-repo',
                url: "${repo}"
                ]]]
                sh(script: 'ls')
            }
        }
    }
}
