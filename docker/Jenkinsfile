pipeline {
    agent any
    stages {
        stage('Clone repo') {
            steps {
                checkout scmGit(
                  branches: [[name: "*/${params.repoBranch}"]],
                  extensions: [],
                  userRemoteConfigs: [[credentialsId: 'git-credentials',
                  url: "${repo}"]])
                sh(script: 'ls')
            }
        }
    }
}
